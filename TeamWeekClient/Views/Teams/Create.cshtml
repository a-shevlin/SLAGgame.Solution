@model TeamWeekClient.Models.Team

@{
  Layout = "_Layout";
}

<h1>Create New Team</h1>
@using (Html.BeginForm("Create", "Teams"))
{
  @Html.LabelFor(model => model.Name, "Name:")
  @Html.TextBoxFor(model => model.Name, new { required = "required" })
  @Html.HiddenFor(model => model.Wins) 
  @Html.HiddenFor(model => model.Losses)
  @Html.HiddenFor(model => model.UserId)
  
  <input type="image" img src="https://raw.githubusercontent.com/GarrettHays/images/main/noun-add-258794.png" class = "addicon" style="width:20px;"/>
}